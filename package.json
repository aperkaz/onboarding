{
  "name": "campaigns",
  "version": "0.1.0",
  "description": "Provides information about campaigns and it'c contacts",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "yarn run setupConsul ; ${NODE_PATH}/.bin/nodemon --watch src/server src/server/index.js",
    "test": "npm run clean && ${NODE_PATH}/.bin/cross-env ${NODE_PATH}/.bin/nyc ${NODE_PATH}/.bin/mocha --recursive 'src/**/*.spec.js' -R mocha-junit-reporter",
    "test-new": "yarn run clean ; yarn run setupConsul ; ${NODE_PATH}/.bin/nyc ${NODE_PATH}/.bin/mocha --recursive -R mocha-junit-reporter",
    "clean": "${NODE_PATH}/.bin/rimraf .nyc_output coverage test-results.xml",
    "setupConsul": "curl -X PUT -d 'bnp' http://${HOST_IP}:8500/v1/kv/campaigns/MYSQL_DATABASE ; curl -X PUT -d 'root' http://${HOST_IP}:8500/v1/kv/campaigns/MYSQL_USER ; curl -X PUT -d 'notSecurePa55w0rd' http://${HOST_IP}:8500/v1/kv/campaigns/MYSQL_PASSWORD",
    "docs": "${NODE_PATH}/.bin/jsdoc2md src/server/index.js > wiki/Home.md",
    "lint": "${NODE_PATH}/.bin/eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpusCapitaBusinessNetwork/campaigns"
  },
  "author": "Daniel Zhitomirsky",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/OpusCapitaBusinessNetwork/campaigns/issues"
  },
  "homepage": "https://github.com/OpusCapitaBusinessNetwork/campaigns/blob/master/README.md",
  "dependencies": {
    "async": "2.1.5",
    "bluebird": "3.0.5",
    "bluebird-retry": "0.10.1",
    "body-parser": "1.15.2",
    "cookie-parser": "1.4.3",
    "jquery": "2.1.4",
    "mysql": "2.13.0",
    "node-schedule": "1.2.1",
    "nodemailer": "2.7.2",
    "nodemon": "1.11.0",
    "ocbesbn-config": ">=1.0.1",
    "ocbesbn-db-init": ">=0.1.7",
    "ocbesbn-web-init": ">=0.1.4",
    "opuscapita-i18n": "1.0.8",
    "papaparse": "4.1.2",
    "polyfill-promise": "4.0.1",
    "react-bootstrap-table": "2.5.7",
    "react-dropzone": "3.7.3",
    "react-intl": "2.2.3",
    "react-notification-system": "0.2.13",
    "recharts": "0.20.5",
    "redux-form": "6.5.0",
    "redux-thunk": "2.2.0",
    "rimraf": "2.6.1",
    "superagent": "2.3.0",
    "superagent-bluebird-promise": "4.2.0",
    "umzug": "1.11.0",
    "uuid": "3.0.1",
    "validate.js": "0.10.0",
    "webpack": "1.13.3",
    "webpack-polyfills-plugin": "0.0.9",
    "xlsx": "0.9.1"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "3.0.0",
    "babel-plugin-transform-object-assign": "6.8.0",
    "babel-plugin-webpack-loaders": "0.8.0",
    "chai": "3.5.0",
    "command-line-args": "4.0.2",
    "cross-env": "3.2.4",
    "jsdoc-to-markdown": "3.0.0",
    "mocha": "3.2.0",
    "mocha-junit-reporter": "1.13.0",
    "nodemon": "1.11.0",
    "npm-run-all": "4.0.1",
    "nyc": "10.1.2",
